@model shop.Models.Email.EmailViewModel

@{
    ViewData["Title"] = "Send Email";
}

<h2>Send Email</h2>

<form asp-action="SendEmail" asp-controller="Email" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="To"></label>
        <input asp-for="To" class="form-control" placeholder="Recipient email" />
        <span asp-validation-for="To" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Subject"></label>
        <input asp-for="Subject" class="form-control" placeholder="Email subject" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Body"></label>
        <textarea asp-for="Body" class="form-control" rows="5" placeholder="Email body"></textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label for="attachment">Attachment</label>
        <input type="file" name="Attachment" class="form-control" multiple />
    </div>

    <button type="submit" class="btn btn-primary mt-4">Send Email</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}