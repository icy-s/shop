@model IEnumerable<shop.Models.Spaceships.SpaceshipsIndexViewModel>

<div>
    <a asp-action="create" asp-controller="spaceships" type="submit" class="btn btn-primary">Create</a>
</div>

<div class="h1">
    Spaceships
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Build Date</th>
                <th scope="col">Crew</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
            }
            @foreach(var spaceships in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@spaceships.Name</td>
                    <td>@spaceships.TypeName</td>
                    <td>@spaceships.BuiltDate</td>
                    <td>@spaceships.Crew</td>
                    <td>
                        <a asp-action="details" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-primary">Details</a>
                        <a asp-action="update" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>    
</form>