@model shop.Models.Accounts.ChangePasswordViewModel

<h1>Change Password</h1>

<div>
    <form asp-action="ChangePassword" method="post" asp-controller="Accounts" enctype="multipart/form-data">
        <div class="form-group row">
            <label asp-for="CurrentPassword" class="col-sm-2 col-form-label"></label>
            <div class="form-group row">
                <input asp-for="CurrentPassword" class="form-control">
                <span asp-validation-for="CurrentPassword" class="text-center"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="NewPassword" class="col-sm-2 col-form-label"></label>
            <div class="form-group row">
                <input asp-for="NewPassword" class="form-control" type="password">
                <span asp-validation-for="NewPassword" class="text-center"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
            <div class="form-group row">
                <input asp-for="ConfirmPassword" class="form-control" type="password">
                <span asp-validation-for="ConfirmPassword" class="text-center"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Update</button>

    </form>
</div>