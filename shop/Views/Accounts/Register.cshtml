@model shop.Models.Accounts.RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<h1>User registration</h1>

<div>
    <form asp-action="Register" method="post" asp-controller="Accounts" enctype="multipart/form-data">
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="form-group row">
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-center"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="form-group row">
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-center"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="form-group row">
                <input asp-for="Password" class="form-control" type="password">
                <span asp-validation-for="Password" class="text-center"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
            <div class="form-group row">
                <input asp-for="ConfirmPassword" class="form-control" type="password">
                <span asp-validation-for="ConfirmPassword" class="text-center"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="City" class="col-sm-2 col-form-label"></label>
            <div class="form-group row">
                <input asp-for="City" class="form-control">
                <span asp-validation-for="City" class="text-center"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-4">Register</button>
    </form>
</div>