<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SymbolGame.MainPage">

    <AbsoluteLayout x:Name="RootLayout" Padding="10">

        <VerticalStackLayout AbsoluteLayout.LayoutBounds="0,0,1,0.3"
                             AbsoluteLayout.LayoutFlags="All"
                             Spacing="10">

            <Picker x:Name="ThemePicker" Title="Vali teema"/>

            <Entry x:Name="SymbolEntry"
                   Placeholder="Sisesta sümbol"
                   Style="{DynamicResource GlobalEntryStyle}"/>

            <Slider x:Name="DurationSlider"
                    Minimum="5000"
                    Maximum="60000"
                    Value="20000"/>
            
            <Label Text="Mängu kestus (ms)"
                   FontSize="18"
                   Style="{DynamicResource GlobalLabelStyle}"/>

            <Button Text="Alusta mängu"
                    Clicked="OnStartClicked"
                    Style="{DynamicResource GlobalButtonStyle}"/>

            <Label x:Name="CounterLabel"
                   Text="Ilmunud: 0"
                   FontSize="20"
                   Style="{DynamicResource GlobalLabelStyle}"/>
        </VerticalStackLayout>

        <!-- Sümbol -->
        <Label x:Name="SymbolLabel"
               IsVisible="False"
               FontSize="48"
               Style="{DynamicResource GlobalLabelStyle}"/>
    </AbsoluteLayout>
</ContentPage>